<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.jqueryui.min.css">

    @Scripts.Render("~/bundles/modernizr")
    <style>
        /* Custom styles for the sidebar */
        #sidebar .nav-link {
            font-size: 1.2rem; /* Increase the font size */
            font-weight: bold; /* Bolder font */
            color: white !important; /* White color */
        }

            #sidebar .nav-link.active {
                background-color: rgba(255, 255, 255, 0.1); /* Add a subtle background to the active link */
            }

            #sidebar .nav-link:hover {
                color: #ccc !important; /* Slightly darker color on hover for a dynamic effect */
            }

        #sidebar .fas { /* FontAwesome icon styles */
            margin-right: 10px; /* Space between the icon and text */
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("MRI Mission Hub", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <h2></h2>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Home/Admin">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                        </li>
                        <hr />
                        <li class="nav-item">
                            <a class="nav-link" href="~/Appointments/Index">
                                <i class="fas fa-calendar"></i> Appointments
                            </a>
                        </li>
                        <li class="nav-item ms-4">
                            <!-- Margin for indentation -->
                            <a class="nav-link" href="~/Appointments/IndexUpcoming"><small>Upcoming Appointments</small></a>
                        </li>
                        <li class="nav-item ms-4">
                            <!-- Margin for indentation -->
                            <a class="nav-link" href="~/Appointments/IndexProcessing"><small>Appointments In Processing</small></a>
                        </li>
                        <li class="nav-item ms-4">
                            <!-- Margin for indentation -->
                            <a class="nav-link" href="~/Appointments/IndexFinished"><small>Finished Appointments</small></a>
                        </li>
                        <hr />
                        <li class="nav-item">
                            <a class="nav-link" href="~/Appointments/SendEmail">
                                <i class="fas fa-envelope"></i> Send Email
                            </a>
                        </li>
                        <hr />
                        <!-- Add more links with icons as needed -->
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Load jQuery first -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Then render other scripts -->
    @RenderSection("Scripts", false)

    <!-- Include FontAwesome JS at the end for icons -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
</body>
</html>
